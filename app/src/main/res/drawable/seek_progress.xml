<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item>

        <shape android:shape="rectangle">
        <corners android:radius="10dp"/>
            <gradient android:startColor="#D3F4FA"
                android:endColor="#E1F3ED"
                android:angle="270"
                />
        </shape>

    </item>
    <item>
           <clip>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:endColor="#1A6EEA"
                android:angle="270"/>
            <stroke android:width="2dp"
                android:color="#0C0B0C"/>

        </shape>
           </clip>
    </item>

</layer-list>